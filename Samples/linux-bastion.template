    "Resources": {
        "LinuxBastion1EIP": {
            "Type": "AWS::EC2::EIP",
            "Properties": {
                "Domain": "vpc",
                "InstanceId": {
                    "Ref": "LinuxBastion1"
                }
            }
        },
        "LinuxBastion2EIP": {
            "Type": "AWS::EC2::EIP",
            "Properties": {
                "Domain": "vpc",
                "InstanceId": {
                    "Ref": "LinuxBastion2"
                }
            }
        },
        "LinuxBastion1": {
            "Type": "AWS::EC2::Instance",
            "Properties": {
                "ImageId": {
                    "Fn::FindInMap": [
                        "AWSAMIRegionMap",
                        {
                            "Ref": "AWS::Region"
                        },
                        {
                            "Fn::FindInMap": [
                                "LinuxAMINameMap",
                                {
                                    "Ref": "BastionAMIOS"
                                },
                                "Code"
                            ]
                        }
                    ]
                },
                "InstanceType": {
                    "Ref": "Bastion1InstanceType"
                },
                "NetworkInterfaces": [
                    {
                        "AssociatePublicIpAddress": true,
                        "DeleteOnTermination": "true",
                        "DeviceIndex": 0,
                        "SubnetId": {
                            "Ref": "PublicSubnet1ID"
                        },
                        "PrivateIpAddress": {
                            "Ref": "Bastion1PrivateIP"
                        },
                        "GroupSet": [
                            {
                                "Ref": "BastionSecurityGroup"
                            }
                        ]
                    }
                ],
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": "LinuxBastion1"
                    }
                ],
                "KeyName": {
                    "Ref": "KeyPairName"
                },
                "UserData": {
                    "Fn::Base64": {
                        "Fn::Join": [
                            "",
                            [
                                "#!/bin/bash\n",
                                "BASTION_BOOTSTRAP_FILE=bastion_bootstrap.sh\n",
                                "BASTION_BOOTSTRAP=",
                                {
                                    "Fn::FindInMap": [
                                        "AWSInfoRegionMap",
                                        {
                                            "Ref": "AWS::Region"
                                        },
                                        "QuickStartS3URL"
                                    ]
                                },
                                "/",
                                {
                                    "Ref": "QSS3BucketName"
                                },
                                "/",
                                {
                                    "Ref": "QSS3KeyPrefix"
                                },
                                "/scripts/",
                                "${BASTION_BOOTSTRAP_FILE}",
                                "\n",
                                "echo ${BASTION_BOOTSTRAP}",
                                "\n",
                                "curl -s ${BASTION_BOOTSTRAP} > ${BASTION_BOOTSTRAP_FILE} ",
                                "\n",
                                "chmod +x ${BASTION_BOOTSTRAP_FILE}\n",
                                "./${BASTION_BOOTSTRAP_FILE} ",
                                " --banner ",
                                {
                                    "Ref": "BastionBanner"
                                },
                                " --enable ",
